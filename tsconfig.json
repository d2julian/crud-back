{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "../*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
